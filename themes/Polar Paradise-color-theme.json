{
  "name": "Polar Paradise",
  "description": "‚ùÑÔ∏è Where penguins code! A refreshing light theme inspired by pristine Arctic landscapes, crystalline igloos, and our tuxedo-wearing friends. Featuring ice-crisp whites, glacier blues, and just a hint of penguin personality. Perfect for developers who keep their cool under pressure! üêß",
  "version": "1.0.0",
  "author": "Hatem Soliman",
  "type": "light",
  "colors": {
    // Primary UI colors inspired by ice and snow
    "editor.background": "#EEF3F9",          // Crisp snow white with blue tint
    "editor.foreground": "#2C3E50",          // Deep ice blue for text
    "editor.lineHighlightBackground": "#E5EDF7", // Subtle ice highlight
    "editor.selectionBackground": "#D0E1F0",  // Soft Arctic blue selection
    "editor.inactiveSelectionBackground": "#DCE8F3",
    
    // Sidebar and activity bar
    "activityBar.background": "#C9E0F4",     // Toothpaste blue
    "activityBar.foreground": "#2C3E50",     // Deep ice blue
    "activityBar.inactiveForeground": "#7FA7C9",
    "activityBarBadge.background": "#1B2F42", // Penguin black
    "activityBarBadge.foreground": "#FFFFFF",
    
    // Sidebar
    "sideBar.background": "#DBE8F4",         // Lighter toothpaste blue
    "sideBar.foreground": "#2C3E50",
    "sideBarTitle.foreground": "#1B2F42",
    "sideBarSectionHeader.background": "#C9E0F4",
    "sideBarSectionHeader.foreground": "#2C3E50",
    
    // Title bar
    "titleBar.activeBackground": "#C9E0F4",
    "titleBar.activeForeground": "#2C3E50",
    "titleBar.inactiveBackground": "#DBE8F4",
    "titleBar.inactiveForeground": "#7FA7C9",
    
    // Tabs
    "tab.activeBackground": "#EEF3F9",
    "tab.inactiveBackground": "#DBE8F4",
    "tab.activeForeground": "#2C3E50",
    "tab.inactiveForeground": "#7FA7C9",
    "tab.activeBorderTop": "#4A90E2",        // Bright Arctic blue accent
    
    // Status bar
    "statusBar.background": "#C9E0F4",
    "statusBar.foreground": "#2C3E50",
    "statusBar.debuggingBackground": "#4A90E2",
    
    // Input and panels
    "input.background": "#FFFFFF",
    "input.foreground": "#2C3E50",
    "panel.background": "#DBE8F4",
    "panelTitle.activeForeground": "#2C3E50"
  },
  "tokenColors": [
    {
      "name": "Comments",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#8CA6BE",            // Glacial gray-blue
        "fontStyle": "italic"
      }
    },
    {
      "name": "Variables",
      "scope": ["variable", "string constant.other.placeholder"],
      "settings": {
        "foreground": "#2C3E50"             // Deep ice blue
      }
    },
    {
      "name": "Keywords and Control",
      "scope": [
        "keyword",
        "storage.type",
        "storage.modifier",
        "keyword.control"
      ],
      "settings": {
        "foreground": "#4A90E2"             // Bright Arctic blue
      }
    },
    {
      "name": "Strings",
      "scope": [
        "string",
        "string.quoted.double.html",
        "string.quoted.single.html"
      ],
      "settings": {
        "foreground": "#3D7A5F"             // Arctic moss green
      }
    },
    {
      "name": "Functions",
      "scope": [
        "entity.name.function",
        "meta.function-call",
        "variable.function",
        "support.function",
        "keyword.other.special-method"
      ],
      "settings": {
        "foreground": "#2E78C7"             // Deep Arctic blue
      }
    },
    {
      "name": "Classes and Types",
      "scope": [
        "entity.name.type",
        "entity.name.class",
        "entity.other.inherited-class",
        "support.class"
      ],
      "settings": {
        "foreground": "#1B2F42"             // Penguin black-blue
      }
    },
    {
      "name": "Numbers and Constants",
      "scope": [
        "constant.numeric",
        "constant.language",
        "constant.character",
        "constant.escape"
      ],
      "settings": {
        "foreground": "#FF9B50"             // Penguin beak orange
      }
    },
    {
      "name": "Tags",
      "scope": [
        "entity.name.tag",
        "meta.tag.sgml"
      ],
      "settings": {
        "foreground": "#4A90E2"             // Bright Arctic blue
      }
    },
    {
      "name": "Attributes",
      "scope": ["entity.other.attribute-name"],
      "settings": {
        "foreground": "#1B2F42",            // Penguin black-blue
        "fontStyle": "italic"
      }
    },
    {
      "name": "Markup Headings",
      "scope": ["markup.heading"],
      "settings": {
        "foreground": "#4A90E2",            // Bright Arctic blue
        "fontStyle": "bold"
      }
    },
    {
      "name": "Markup Bold",
      "scope": ["markup.bold"],
      "settings": {
        "foreground": "#1B2F42",            // Penguin black-blue
        "fontStyle": "bold"
      }
    },
    {
      "name": "Markup Italic",
      "scope": ["markup.italic"],
      "settings": {
        "foreground": "#2E78C7",            // Deep Arctic blue
        "fontStyle": "italic"
      }
    }
  ],
  "semanticHighlighting": true,
  "semanticTokenColors": {
    "parameter": "#2C3E50",                 // Deep ice blue
    "property": "#3A5269",                  // Darker ice blue
    "type": "#1B2F42",                      // Penguin black-blue
    "class": "#1B2F42",                     // Penguin black-blue
    "enum": "#4A90E2",                      // Bright Arctic blue
    "interface": "#2E78C7",                 // Deep Arctic blue
    "typeParameter": "#FF9B50",             // Penguin beak orange
    "function": "#2E78C7",                  // Deep Arctic blue
    "method": "#2E78C7",                    // Deep Arctic blue
    "decorator": "#4A90E2",                 // Bright Arctic blue
    "regex": "#3D7A5F"                      // Arctic moss green
  }
}